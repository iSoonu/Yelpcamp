<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
  <h1>Campgrounds</h1>
  <!-- <div><a href="/campgrounds/new">Add Campground</a></div> -->
  <% for (let camp of campground) { %>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <% if (camp.images.length) { %>
          <img crossorigin="anonymous" class="img-fluid" alt="" src="<%= camp.images[0].url %>" />
          <% } else {%>
            <img crossorigin="anonymous" class="fluid" src="" alt="">
            <% }%>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              <%= camp.title %>
            </h5>
            <p class="card-text">
              <%= camp.description %>
            </p>
            <p class="card-text">
              <small class="text-muted">
                <%= camp.location %>
              </small>
            </p>
            <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View <%= camp.title %></a>
          </div>
        </div>
      </div>
    </div>
    <% } %>
    <script>
      const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
